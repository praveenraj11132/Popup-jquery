<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Customer Code</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Wheelpros\CustomerExtended\Block\CustomerCode\Details" name="customer.code.details" template="Wheelpros_CustomerExtended::customercode/details.phtml" />
        </referenceContainer>
    </body>
</page>
